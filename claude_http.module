<?php

/**
 * @file
 * Contains claude_http.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function claude_http_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.claude_http':
      return '<p>' . t('The Claude HTTP module provides a custom HTTP method implementation for Drupal 10. This module was created by Claude Code and includes API endpoints, services, and event subscribers for handling HTTP requests in a standardized way.') . '</p>' .
        '<h3>' . t('Features') . '</h3>' .
        '<ul>' .
        '<li>' . t('Custom API controller with HTTP endpoint handling') . '</li>' .
        '<li>' . t('Dedicated API service for business logic') . '</li>' .
        '<li>' . t('Event subscriber for API response processing') . '</li>' .
        '<li>' . t('Routing configuration for custom endpoints') . '</li>' .
        '</ul>' .
        '<h3>' . t('Available Endpoints') . '</h3>' .
        '<ul>' .
        '<li><strong>GET /api/data/{id}</strong> - ' . t('Retrieve data by ID (requires "access content" permission)') . '</li>' .
        '<li><strong>POST /api/data</strong> - ' . t('Create new data (requires "create content" permission)') . '</li>' .
        '<li><strong>PUT /api/data/{id}</strong> - ' . t('Update existing data by ID (requires "edit any content" permission)') . '</li>' .
        '<li><strong>DELETE /api/data/{id}</strong> - ' . t('Delete data by ID (requires "delete any content" permission)') . '</li>' .
        '</ul>' .
        '<h3>' . t('Usage') . '</h3>' .
        '<p>' . t('Once enabled, this module provides RESTful HTTP API endpoints that can be accessed programmatically. The {id} parameter must be a numeric value. Ensure users have the appropriate permissions for each endpoint.') . '</p>';
  }
}