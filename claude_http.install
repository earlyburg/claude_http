<?php

/**
 * @file
 * Install, update and uninstall functions for the claude_http module.
 */

/**
 * Implements hook_install().
 */
function claude_http_install() {
  // Create the custom table during module installation.
  $schema = claude_http_schema();
  foreach ($schema as $table_name => $table_spec) {
    if (!\Drupal::database()->schema()->tableExists($table_name)) {
      \Drupal::database()->schema()->createTable($table_name, $table_spec);
    }
  }
}

/**
 * Implements hook_uninstall().
 */
function claude_http_uninstall() {
  // Drop the custom table during module uninstallation.
  $schema = claude_http_schema();
  foreach ($schema as $table_name => $table_spec) {
    if (\Drupal::database()->schema()->tableExists($table_name)) {
      \Drupal::database()->schema()->dropTable($table_name);
    }
  }
}

/**
 * Implements hook_schema().
 */
function claude_http_schema() {
  $schema['claude_http'] = [
    'description' => 'Stores data for the claude_http module.',
    'fields' => [
      'id' => [
        'type' => 'serial',
        'not null' => TRUE,
        'description' => 'Primary Key: Unique ID.',
      ],
      'name' => [
        'type' => 'varchar',
        'length' => 255,
        'not null' => TRUE,
        'description' => 'Name of the data entry.',
      ],
      'description' => [
        'type' => 'text',
        'not null' => FALSE,
        'description' => 'Description of the data entry.',
      ],
      'created' => [
        'type' => 'int',
        'not null' => TRUE,
        'default' => 0,
        'description' => 'Timestamp when the entry was created.',
      ],
      'updated' => [
        'type' => 'int',
        'not null' => TRUE,
        'default' => 0,
        'description' => 'Timestamp when the entry was last updated.',
      ],
    ],
    'primary key' => ['id'],
    'indexes' => [
      'name' => ['name'],
      'created' => ['created'],
    ],
  ];

  return $schema;
}
